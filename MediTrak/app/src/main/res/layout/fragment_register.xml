<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:backgroundTintMode="src_in"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/imgRegister"
            android:layout_width="191dp"
            android:layout_height="195dp"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_self" />

        <TextView
            android:id="@+id/txtRegisterHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/playfair_display"
            android:text="@string/register_header1"
            android:textColor="@color/fg_main"
            android:textSize="49sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgRegister" />

        <TextView
            android:id="@+id/txtRegisterContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/raleway"
            android:text="@string/register_content1"
            android:textColor="@color/fg_secondary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRegisterHeader" />

        <EditText
            android:id="@+id/etRegisterField"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/fg_main"
            android:ems="10"
            android:focusable="true"
            android:fontFamily="@font/playfair_display"
            android:hint="@string/register_hint1"
            android:inputType="textPersonName"
            android:textColor="@color/fg_main"
            android:textColorHighlight="@color/fg_hint"
            android:textColorHint="@color/fg_hint"
            android:textColorLink="#9C27B0"
            android:textSize="31sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRegisterContent" />

        <Button
            android:id="@+id/btnRegisterNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/btn_primary"
            android:backgroundTintMode="src_atop"
            android:fontFamily="@font/raleway"
            android:text="@string/btn_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etRegisterField" />

        <Button
            android:id="@+id/btnRegisterBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/btn_secondary"
            android:backgroundTintMode="src_over"
            android:fontFamily="@font/raleway"
            android:text="@string/btn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etRegisterField" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
